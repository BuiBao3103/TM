<!-- Show toast temp data success message-->
@if (TempData["SuccessMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToastSuccess" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header" style="background-color: #70ff83">
                <strong class="me-auto">Thông báo</strong>
                <small>vừa xong</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
        </div>
    </div>

    <script>
        function showSuccessMessage() {
            window.addEventListener('DOMContentLoaded', (event) => {
                const toastEl = document.getElementById('liveToastSuccess');
                const toast = new bootstrap.Toast(toastEl);
                toast.show();
            });
        }
    </script>
}
