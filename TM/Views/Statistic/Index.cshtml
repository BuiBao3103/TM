            border-radius: 16px;
            border: none;
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
        }

            .stats-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

        .stats-card-purple {
            background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
        }

