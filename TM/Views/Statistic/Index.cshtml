@model TM.Models.ViewModels.StatisticViewModel
@using TM.Controllers
@using System.Globalization
@{
    ViewData["Title"] = "Thống kê Tour";
    var activeTab = ViewBag.ActiveTab as string ?? "tour";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="p-3 rounded border text-white">
                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="text-primary mb-1">
                                <i class="fa-regular fa-chart-bar me-2"></i>Thống kê
                            </h2>
                            <p class="text-muted mb-0">Phân tích thống kê tour du lịch và nhân viên chi tiết</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <!-- Bộ lọc -->
                    <div class="bg-light rounded p-4 mb-4 border">
                        <form method="get" id="filterForm" class="row g-3">
                            <input type="hidden" name="tab" id="activeTabInput" value="@activeTab" />
                            <div class="col-lg-3 col-md-6">
                                <label for="selectedCountry" class="form-label fw-semibold">
                                    <i class="fas fa-globe me-1"></i>Quốc gia
                                </label>
                                <select name="selectedCountry" id="selectedCountry" class="form-select">
                                    @foreach (var country in ViewBag.Countries as List<SelectListItem>)
                                    {
                                        <option value="@country.Value" selected="@(country.Value == ViewBag.SelectedCountry)">
                                            @country.Text
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <label for="selectedLocation" class="form-label fw-semibold">
                                    <i class="fas fa-map-marker-alt me-1"></i>Địa điểm
                                </label>
                                <select name="selectedLocation" id="selectedLocation" class="form-select">
                                    @foreach (var location in ViewBag.Locations as List<SelectListItem>)
                                    {
                                        <option value="@location.Value" selected="@(location.Value == ViewBag.SelectedLocation)">
                                            @location.Text
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-lg-2 col-md-6">
                                <label for="fromDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt me-1"></i>Từ ngày
                                </label>
                                <input type="date" name="fromDate" id="fromDate" class="form-control"
                                       value="@ViewBag.FromDate" />
                            </div>

                            <div class="col-lg-2 col-md-6">
                                <label for="toDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt me-1"></i>Đến ngày
                                </label>
                                <input type="date" name="toDate" id="toDate" class="form-control"
                                       value="@ViewBag.ToDate" />
                            </div>

                            @* <div class="col-lg-2 col-md-6">
                                <label for="selectedSeller" class="form-label fw-semibold">
                                    <i class="fas fa-user-tie me-1"></i>Nhân viên tạo
                                </label>
                                <select name="selectedSeller" id="selectedSeller" class="form-select">
                                    @foreach (var seller in ViewBag.Sellers as List<SelectListItem>)
                                    {
                                        <option value="@seller.Value" selected="@(seller.Value == ViewBag.SelectedSeller)">
                                            @seller.Text
                                        </option>
                                    }
                                </select>
                            </div> *@

                            <div class="col-lg-2 col-md-6 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary px-4 w-100">
                                    <i class="fas fa-search me-2"></i>Tìm kiếm
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Tabs Navigation -->
                    <ul class="nav nav-tabs mt-4" id="statsTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(activeTab == "tour" ? "active" : "")" id="tour-stats-tab" data-bs-toggle="tab" data-bs-target="#tour-stats-pane" type="button" role="tab" aria-controls="tour-stats-pane" aria-selected="@(activeTab == "tour")">Thống kê Tour</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(activeTab == "employee" ? "active" : "")" id="employee-stats-tab" data-bs-toggle="tab" data-bs-target="#employee-stats-pane" type="button" role="tab" aria-controls="employee-stats-pane" aria-selected="@(activeTab == "employee")">Thống kê Nhân viên</button>
                        </li>
                    </ul>
                    
                    <!-- Tab Content -->
                    <div class="tab-content" id="statsTabContent">
                        <!-- Tour Statistics Pane -->
                        <div class="tab-pane fade @(activeTab == "tour" ? "show active" : "")" id="tour-stats-pane" role="tabpanel" aria-labelledby="tour-stats-tab">
                            <!-- Tổng quan thống kê -->
                            <div class="row g-4 my-4">
                                <div class="col-lg-4 col-md-6">
                                    <div class="card text-danger border  h-100 " style="background-color: #ed9aa22e; border-color: #dc354540 !important">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="card-subtitle mb-2 ">Tổng số Tour</h6>
                                                    <h2 class="card-title mb-0 fw-bold">@((Model?.TotalTours ?? 0).ToString("N0"))</h2>
                                                </div>
                                                <div class="display-6 opacity-50">
                                                    <i class="fas fa-route"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-6">
                                    <div class="card text-warning border  h-100" style="background-color: #fff0c259; border-color: #ffdd78d4 !important">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="card-subtitle mb-2 ">Tổng hành khách</h6>
                                                    <h2 class="card-title mb-0 fw-bold">@((Model?.TotalPassengers ?? 0).ToString("N0"))</h2>
                                                </div>
                                                <div class="display-6 opacity-50">
                                                    <i class="fas fa-users"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-6">
                                    <div class="card text-success border h-100" style="background-color: #05966917; border-color: #19875461 !important">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="card-subtitle mb-2 ">Tổng doanh thu</h6>
                                                    <h2 class="card-title mb-0 fw-bold">@((Model?.TotalRevenue ?? 0).ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</h2>
                                                </div>
                                                <div class="display-6 opacity-50">
                                                    <i class="fas fa-dollar-sign"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Biểu đồ doanh thu theo thời gian -->
                            @if (Model?.RevenueByDate != null && Model.RevenueByDate.Any())
                            {
                                <div class="row mb-4 ">
                                    <div class="col-12">
                                        <div class="card border shadow-sm">
                                            <div class="card-header bg-white py-3 border-bottom">
                                                <h5 class="card-title mb-0 text-primary">
                                                    <i class="fas fa-chart-line me-2 text-blue"></i>
                                                    Biểu đồ doanh thu
                                                </h5>
                                            </div>
                                            <div class="card-body">
                                                <canvas id="revenueChart" style="height: 400px;"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- Thống kê theo quốc gia và địa điểm -->
                            <div class="row g-4">
                                <!-- Tours theo quốc gia -->
                                <div class="col-lg-5">
                                    <div class="card border shadow-sm h-100">
                                        <div class="card-header py-3 bg-white border-bottom">
                                            <h5 class="card-title mb-0 text-primary">
                                                <i class="fas fa-globe-asia me-2 text-primary"></i>
                                                Thống kê theo Quốc gia
                                            </h5>
                                        </div>
                                        <div class="card-body p-0">
                                            <div class="table-responsive">
                                                <table class="table table-hover mb-0">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th class="px-4 py-3 fw-semibold text-center">STT</th>
                                                            <th class="px-4 py-3 fw-semibold">Quốc gia</th>
                                                            <th class="px-4 py-3 fw-semibold text-center">Số Tour</th>
                                                            <th class="px-4 py-3 fw-semibold text-center">Số khách</th>
                                                            <th class="px-4 py-3 fw-semibold text-end">Doanh thu</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model?.ToursByCountry != null)
                                                        {
                                                            @foreach (var item in Model.ToursByCountry.OrderByDescending(x => x.TourCount).Select((value, index) => new { value, index }))
                                                            {
                                                                <tr>
                                                                    <td class="px-4 py-3 text-center">@(@item.index + 1)</td>
                                                                    <td class="px-4 py-3">
                                                                        <span class="fw-semibold text-dark">@item.value.CountryName</span>
                                                                    </td>
                                                                    <td class="px-4 py-3 text-center">
                                                                        <span class="badge bg-primary rounded-pill">@item.value.TourCount</span>
                                                                    </td>
                                                                    <td class="px-4 py-3 text-center">
                                                                        <span class="badge bg-info rounded-pill">@item.value.PassengerCount</span>
                                                                    </td>
                                                                    <td class="px-4 py-3 text-end">
                                                                        <span class="fw-bold text-success">@item.value.Revenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="4" class="text-center py-4 text-muted">
                                                                    <i class="fas fa-info-circle me-2"></i>
                                                                    Không có dữ liệu để hiển thị
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Tours theo địa điểm -->
                                <div class="col-lg-7">
                                    <div class="card border shadow-sm h-100">
                                        <div class="card-header py-3 bg-white border-bottom">
                                            <h5 class="card-title mb-0 text-primary">
                                                <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                                Thống kê theo Địa điểm
                                            </h5>
                                        </div>
                                        <div class="card-body p-0">
                                            <div class="table-responsive">
                                                <table class="table table-hover mb-0">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th class="px-4 py-3 fw-semibold text-center">STT</th>
                                                            <th class="px-4 py-3 fw-semibold">Địa điểm</th>
                                                            <th class="px-4 py-3 fw-semibold">Quốc gia</th>
                                                            <th class="px-4 py-3 fw-semibold text-center">Số Tour</th>
                                                            <th class="px-4 py-3 fw-semibold text-center">Số khách</th>
                                                            <th class="px-4 py-3 fw-semibold text-end">Doanh thu</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model?.ToursByLocation != null)
                                                        {
                                                            @foreach (var item in Model.ToursByLocation.OrderByDescending(x => x.TourCount).Select((value, index) => new { value, index }))
                                                            {
                                                                <tr>
                                                                    <td class="px-4 py-3 text-center">@(@item.index + 1)</td>
                                                                    <td class="px-4 py-3">
                                                                        <span class="fw-semibold text-dark">@item.value.LocationName</span>
                                                                    </td>
                                                                    <td class="px-4 py-3">
                                                                        <span class="fw-semibold text-dark">@item.value.CountryName</span>
                                                                    </td>
                                                                    <td class="px-4 py-3 text-center">
                                                                        <span class="badge bg-primary rounded-pill">@item.value.TourCount</span>
                                                                    </td>
                                                                    <td class="px-4 py-3 text-center">
                                                                        <span class="badge bg-info text-white rounded-pill">@item.value.PassengerCount</span>
                                                                    </td>
                                                                    <td class="px-4 py-3 text-end">
                                                                        <span class="fw-bold text-success">@item.value.Revenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                                                    </td>
                                                                </tr>
                                                            }

                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="4" class="text-center py-4 text-muted">
                                                                    <i class="fas fa-info-circle me-2"></i>
                                                                    Không có dữ liệu để hiển thị
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Employee Statistics Pane -->
                        <div class="tab-pane fade @(activeTab == "employee" ? "show active" : "")" id="employee-stats-pane" role="tabpanel" aria-labelledby="employee-stats-tab">
                            <div class="card border shadow-sm mt-4">
                                <div class="card-header py-3 bg-white border-bottom">
                                    <h5 class="card-title mb-0 text-primary">
                                        <i class="fas fa-user-tie me-2"></i> Thống kê thu nhập nhân viên
                                    </h5>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                             <thead class="table-light">
                                                <tr>
                                                    <th class="px-4 py-3 fw-semibold text-center">STT</th>
                                                    <th class="px-4 py-3 fw-semibold">Nhân viên</th>
                                                    <th class="px-4 py-3 fw-semibold text-end">Doanh thu</th>
                                                    <th class="px-4 py-3 fw-semibold text-end">Hoa hồng</th>
                                                    <th class="px-4 py-3 fw-semibold text-end">Giảm giá</th>
                                                    <th class="px-4 py-3 fw-semibold text-end">Thu nhập thực</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var (item, index) in Model.EmployeeStatistics.Select((value, i) => (value, i)))
                                                {
                                                    <tr>
                                                        <td class="px-4 py-3 text-center">@(index + 1)</td>
                                                        <td class="px-4 py-3 fw-bold">@item.EmployeeName</td>
                                                        <td class="px-4 py-3 text-end">@item.TotalRevenue.ToString("C0", new CultureInfo("vi-VN"))</td>
                                                        <td class="px-4 py-3 text-end text-success">@item.TotalCommission.ToString("C0", new CultureInfo("vi-VN"))</td>
                                                        <td class="px-4 py-3 text-end text-danger">@item.TotalDiscount.ToString("C0", new CultureInfo("vi-VN"))</td>
                                                        <td class="px-4 py-3 text-end fw-bold text-primary">@item.TotalEarnings.ToString("C0", new CultureInfo("vi-VN"))</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            // Tab handling
            $('#statsTab button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                var tabId = $(e.target).attr('id').split('-')[0]; // 'tour' or 'employee'
                $('#activeTabInput').val(tabId);
            });

            // Location filtering
            var selectedCountry = $('#selectedCountry').val();
            var selectedLocation = '@ViewBag.SelectedLocation';

            if (selectedCountry) {
                $.get('@Url.Action("GetLocationsByCountry")', { country: selectedCountry }, function (data) {
                    var locationSelect = $('#selectedLocation');
                    locationSelect.empty();
                    locationSelect.append('<option value="">Tất cả địa điểm</option>');

                    $.each(data, function (index, item) {
                        var isSelected = item.value === selectedLocation ? 'selected' : '';
                        locationSelect.append('<option value="' + item.value + '" ' + isSelected + '>' + item.text + '</option>');
                    });
                });
            }

            $('#selectedCountry').change(function () {
                var selectedCountry = $(this).val();
                $.get('@Url.Action("GetLocationsByCountry")', { country: selectedCountry }, function (data) {
                    var locationSelect = $('#selectedLocation');
                    locationSelect.empty();
                    locationSelect.append('<option value="">Tất cả địa điểm</option>');
                    $.each(data, function (index, item) {
                        locationSelect.append('<option value="' + item.value + '">' + item.text + '</option>');
                    });
                });
            });

            // Chart
        @if (Model.RevenueByDate.Any())
        {
            <text>
                var ctx = document.getElementById('revenueChart')?.getContext('2d');
                if (ctx) {
                    var labels = [@Html.Raw(string.Join(",", Model.RevenueByDate.Select(r => $"'{r.Date:dd/MM}'")))];
                    var revenueData = [@string.Join(",", Model.RevenueByDate.Select(r => r.Revenue.HasValue ? r.Revenue.Value.ToString() : "null"))];
                    var passengerData = [@string.Join(",", Model.RevenueByDate.Select(r => r.PassengerCount.HasValue ? r.PassengerCount.Value.ToString() : "null"))];
                    var tourData = [@string.Join(",", Model.RevenueByDate.Select(r => r.TourCount.HasValue ? r.TourCount.Value.ToString() : "null"))];

                    var mixedChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                                 datasets: [
                                    {
                                        type: 'line',
                                        label: 'Doanh thu (VNĐ)',
                                        data: revenueData,
                                        borderColor: 'rgb(75, 192, 192)', 
                                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                                        borderWidth: 3,
                                        fill: true,
                                        tension: 0.4,
                                        yAxisID: 'y',
                                        pointBackgroundColor: 'rgb(75, 192, 192)',
                                        pointBorderColor: '#fff',
                                        pointBorderWidth: 2,
                                        pointRadius: 5,
                                        pointHoverRadius: 8,
                                        spanGaps: false
                                    },
                                    {
                                        type: 'bar',
                                        label: 'Số khách',
                                        data: passengerData,
                                            backgroundColor: 'rgba(255, 205, 86, 0.7)',
                                        yAxisID: 'y1'
                                    },
                                    {
                                        type: 'bar',
                                        label: 'Số tour',
                                        data: tourData,
                                        backgroundColor: 'rgba(255, 99, 132, 0.7)',
                                        yAxisID: 'y1'
                                    }
                                ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: {
                                mode: 'index',
                                intersect: false
                            },
                            plugins: {
                                legend: {
                                    position: 'top',
                                    labels: {
                                        usePointStyle: true,
                                        padding: 20
                                    }
                                },
                                tooltip: {
                                    filter: function(tooltipItem) {
                                        return tooltipItem.raw !== null;
                                    },
                                    callbacks: {
                                        label: function (context) {
                                            if (context.raw === null) {
                                                return null;
                                            }
                                            if (context.dataset.label.includes('Doanh thu')) {
                                                return new Intl.NumberFormat('vi-VN', {
                                                    style: 'currency',
                                                    currency: 'VND'
                                                }).format(context.raw);
                                            }
                                            return `${context.dataset.label}: ${context.raw}`;
                                        }
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Ngày / Tháng',
                                        font: { size: 14, weight: 'bold' }
                                    },
                                    grid: { display: false },
                                    ticks: { font: { weight: 'bold' } }
                                },
                                y: {
                                    beginAtZero: true,
                                    position: 'left',
                                    title: {
                                        display: true,
                                        text: 'Doanh thu (VNĐ)',
                                        font: { size: 14, weight: 'bold' }
                                    },
                                    grid: { color: 'rgba(0,0,0,0.1)' },
                                    ticks: {
                                        callback: function (value) {
                                            return new Intl.NumberFormat('vi-VN', {
                                                style: 'currency',
                                                currency: 'VND'
                                            }).format(value);
                                        },
                                        font: { weight: 'bold' }
                                    }
                                },
                                y1: {
                                    beginAtZero: true,
                                    position: 'right',
                                    title: {
                                        display: true,
                                        text: 'Khách & Tour',
                                        font: { size: 14, weight: 'bold' }
                                    },
                                    grid: { drawOnChartArea: false },
                                    ticks: {
                                        stepSize: 1,
                                        font: { weight: 'bold' }
                                    }
                                }
                            }
                        }
                    });
                }
            </text>
        }

            window.clearFilters = function () {
                $('#selectedCountry').val('');
                $('#selectedLocation').val('');
                $('#fromDate').val('');
                $('#toDate').val('');
                $('#filterForm').submit();
            };
        });
    </script>
}

@section Styles {
    <style>
        /* Filter Section */
        .filter-section {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border-radius: 16px;
            padding: 24px;
            border: 1px solid #e2e8f0;
        }

        .filter-title {
            color: #374151;
            font-weight: 600;
        }

        /* Stats Cards */
        .stats-card {
            border-radius: 16px;
            border: none;
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
        }

            .stats-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

        .stats-card-purple {
            background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
        }

        .stats-card-pink {
            background: linear-gradient(135deg, #ec4899 0%, #f97316 100%);
        }

        .stats-card-blue {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        }

        .stats-icon {
            font-size: 2.5rem;
            opacity: 0.3;
        }

        .text-white-75 {
            color: rgba(255, 255, 255, 0.75) !important;
        }

        /* Cards */
        .card {
            border-radius: 12px;
            transition: all 0.3s ease;
            border: none;
        }

            .card:hover {
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .card-header {
            border-radius: 12px 12px 0 0 !important;
            background: white !important;
            border-bottom: 2px solid #f1f5f9 !important;
        }

        /* Table */
        .table-hover tbody tr:hover {
            background-color: rgba(99, 102, 241, 0.05);
            transform: scale(1.01);
            transition: all 0.2s ease;
        }

        .table thead th {
            background-color: #f8fafc !important;
            color: #374151;
            font-weight: 600;
            border: none;
            padding: 16px !important;
        }

        .table tbody td {
