@model TM.Models.ViewModels.TourPassengerViewModel

@{
    ViewData["Title"] = "Thêm khách hành cho tour";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-user-plus me-2"></i>Thêm Hành Khách Mới
                    </h2>
                    <p class="text-muted mb-0">Điền thông tin hành khách tham gia tour</p>
                </div>
            </div>

            <!-- Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-address-card me-2"></i>Thông tin hành khách
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @* Ẩn ID nếu cần *@
                        <input type="hidden" asp-for="Id" />

                        <!-- Thông tin cơ bản -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Code" class="form-label fw-semibold">
                                    <i class="fas fa-id-badge me-1"></i>Mã Khách
                                </label>
                                <input asp-for="Code" class="form-control" placeholder="VD: PAX001" />
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">
                                    <i class="fas fa-user me-1"></i>Họ tên
                                </label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-semibold">
                                    <i class="fas fa-birthday-cake me-1"></i>Ngày sinh
                                </label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label fw-semibold">
                                    <i class="fas fa-venus-mars me-1"></i>Giới tính
                                </label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Liên hệ -->
                        <div class="mb-4">
                            <h6 class="text-primary border-bottom pb-2 mb-3 fw-bold">
                                <i class="fas fa-phone-alt me-2"></i>Liên hệ
                            </h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label fw-semibold">
                                        <i class="fas fa-phone me-1"></i>Điện thoại
                                    </label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">
                                        <i class="fas fa-envelope me-1"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdentityNumber" class="form-label fw-semibold">
                                        <i class="fas fa-id-card me-1"></i>Số CMND/CCCD
                                    </label>
                                    <input asp-for="IdentityNumber" class="form-control" />
                                    <span asp-validation-for="IdentityNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Address" class="form-label fw-semibold">
                                        <i class="fas fa-map-marker-alt me-1"></i>Địa chỉ
                                    </label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin tour -->
                        <div class="mb-4">
                            <h6 class="text-primary border-bottom pb-2 mb-3 fw-bold">
                                <i class="fas fa-plane-departure me-2"></i>Thông tin Tour
                            </h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TourId" class="form-label fw-semibold">
                                        <i class="fas fa-route me-1"></i>Mã Tour
                                    </label>
                                    <input asp-for="Code" class="form-control" disabled />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TourName" class="form-label fw-semibold">
                                        <i class="fas fa-globe me-1"></i>Tên Tour
                                    </label>
                                    <input asp-for="TourName" class="form-control" disabled />
                                    <span asp-validation-for="TourName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin thanh toán -->
                        <div class="mb-4">
                            <h6 class="text-primary border-bottom pb-2 mb-3 fw-bold">
                                <i class="fas fa-money-bill me-2"></i>Thanh toán
                            </h6>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="AssignedPrice" class="form-label fw-semibold">
                                        <i class="fas fa-tags me-1"></i>Giá chào
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="AssignedPrice" class="form-control" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <span asp-validation-for="AssignedPrice" class="text-danger small"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="CustomerPaid" class="form-label fw-semibold">
                                        <i class="fas fa-wallet me-1"></i>Khách đã trả
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="CustomerPaid" class="form-control" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <span asp-validation-for="CustomerPaid" class="text-danger small"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="Status" class="form-label fw-semibold">
                                        <i class="fas fa-info-circle me-1"></i>Trạng thái
                                    </label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">-- Chọn trạng thái --</option>
                                        <option value="Reserved">Reserved</option>
                                        <option value="Paid">Paid</option>
                                        <option value="Cancelled">Cancelled</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Lưu hành khách
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}