@model TM.Models.ViewModels.PassengerAddViewModel

@{
    ViewData["Title"] = "Thêm khách hành cho tour";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-user-plus me-2"></i>Thêm Hành Khách Mới
                    </h2>
                    <p class="text-muted mb-0">Điền thông tin hành khách tham gia tour</p>
                </div>
            </div>

            <!-- Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-address-card me-2"></i>Thông tin hành khách
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddTourPassenger" method="post">
                        @* Ẩn ID để hõ trợ view model truyền data *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TourId" />


                        <!-- Thông tin cơ bản -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Code" class="form-label fw-semibold">
                                    <i class="fas fa-id-badge me-1"></i>Mã Khách
                                </label>
                                <input asp-for="Code" class="form-control" placeholder="VD: PAX001" />
                                <span asp-validation-for="Code" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">
                                    <i class="fas fa-user me-1"></i>Họ tên
                                </label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label fw-semibold">
                                    <i class="fas fa-birthday-cake me-1"></i>Ngày sinh
                                </label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label fw-semibold">
                                    <i class="fas fa-venus-mars me-1"></i>Giới tính
                                </label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Male">Nam</option>
                                    <option value="Female">Nữ</option>
                                    <option value="Other">Khác</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Liên hệ -->
                        <div class="mb-4">
                            <h6 class="text-primary border-bottom pb-2 mb-3 fw-bold">
                                <i class="fas fa-phone-alt me-2"></i>Liên hệ
                            </h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">
                                        <i class="fas fa-envelope me-1"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label fw-semibold">
                                        <i class="fas fa-envelope me-1"></i>Số điện thoại
                                    </label>
                                    <input asp-for="Phone" class="form-control" type="number" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdentityNumber" class="form-label fw-semibold">
                                        <i class="fas fa-id-card me-1"></i>Số CMND/CCCD
                                    </label>
                                    <input asp-for="IdentityNumber" class="form-control" type="number" />
                                    <span asp-validation-for="IdentityNumber" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="PassportNum" class="form-label fw-semibold">
                                        <i class="fas fa-passport me-1"></i>Số hộ chiếu
                                    </label>
                                    <input asp-for="PassportNum" class="form-control" />
                                    <span asp-validation-for="PassportNum" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="PassportExpiryDate" class="form-label fw-semibold">
                                        <i class="fas fa-calendar-alt me-1"></i>Ngày hết hạn hộ chiếu
                                    </label>
                                    <input asp-for="PassportExpiryDate" class="form-control" type="date" />
                                    <span asp-validation-for="PassportExpiryDate" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Address" class="form-label fw-semibold">
                                        <i class="fas fa-map-marker-alt me-1"></i>Địa chỉ
                                    </label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label asp-for="Note" class="form-label fw-semibold">
                                        <i class="fas fa-sticky-note me-1"></i>Ghi chú
                                    </label>
                                    <textarea asp-for="Note" class="form-control" rows="3" placeholder="Nhập ghi chú về hành khách (nếu có)"></textarea>
                                    <span asp-validation-for="Note" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin tour -->
                        <div class="mb-4">
                            <h6 class="text-primary border-bottom pb-2 mb-3 fw-bold">
                                <i class="fas fa-plane-departure me-2"></i>Thông tin Tour
                            </h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TourCode" class="form-label fw-semibold">
                                        <i class="fas fa-route me-1"></i>Mã Tour
                                    </label>
                                    <input asp-for="TourCode" class="form-control" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="TourName" class="form-label fw-semibold">
                                        <i class="fas fa-globe me-1"></i>Tên Tour
                                    </label>
                                    <input asp-for="TourName" class="form-control" readonly />
                                    <span asp-validation-for="TourName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="DepartureFlightInfo" class="form-label fw-semibold">
                                        <i class="fas fa-plane-departure me-1"></i>Thông tin chuyến bay đi
                                    </label>
                                    <input asp-for="DepartureFlightInfo" class="form-control" />
                                    <span asp-validation-for="DepartureFlightInfo" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ArrivalFlightInfo" class="form-label fw-semibold">
                                        <i class="fas fa-plane-arrival me-1"></i>Thông tin chuyến bay về
                                    </label>
                                    <input asp-for="ArrivalFlightInfo" class="form-control" />
                                    <span asp-validation-for="ArrivalFlightInfo" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin thanh toán -->
                        <div class="mb-4">
                            <h6 class="text-primary border-bottom pb-2 mb-3 fw-bold">
                                <i class="fas fa-money-bill me-2"></i>Thanh toán
                            </h6>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="AssignedPrice" class="form-label fw-semibold d-flex justify-content-between">
                                        <span>
                                            <i class="fas fa-tags me-1"></i>Giá đề xuất
                                        </span>
                                        <small id="AssignedPriceDisplay" class="text-success"></small>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="AssignedPrice" type="number" min="0" class="form-control money-input" oninput="updateFormattedDisplay(this, 'AssignedPriceDisplay')" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <span asp-validation-for="AssignedPrice" class="text-danger small"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="DiscountPrice" class="form-label fw-semibold d-flex justify-content-between">
                                        <span>
                                            <i class="fas fa-tags me-1"></i>Số tiền giảm
                                        </span>
                                        <small id="DiscountPriceDisplay" class="text-success"></small>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="DiscountPrice" type="number" min="0" class="form-control money-input" oninput="updateFormattedDisplay(this, 'AssignedPriceDisplay')" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <span asp-validation-for="DiscountPrice" class="text-danger small"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="hhFee" class="form-label fw-semibold d-flex justify-content-between">
                                        <span>
                                            <i class="fas fa-tags me-1"></i>Phí hoa hồng
                                        </span>
                                        <small id="hhFeeDisplay" class="text-success"></small>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="hhFee" type="number" min="0" class="form-control money-input" oninput="updateFormattedDisplay(this, 'AssignedPriceDisplay')" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <span asp-validation-for="hhFee" class="text-danger small"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="CustomerPaid" class="form-label fw-semibold d-flex justify-content-between">
                                        <span>
                                            <i class="fas fa-wallet me-1"></i>Khách đã trả
                                        </span>
                                        <small id="CustomerPaidDisplay" class="text-success"></small>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="CustomerPaid" type="number" min="0" class="form-control money-input" oninput="updateFormattedDisplay(this, 'CustomerPaidDisplay')" />
                                        <span class="input-group-text">VNĐ</span>
                                    </div>
                                    <span asp-validation-for="CustomerPaid" class="text-danger small"></span>
                                </div>



                                <div class="col-md-4 mb-3">
                                    <label asp-for="Status" class="form-label fw-semibold">
                                        <i class="fas fa-info-circle me-1"></i>Trạng thái
                                    </label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">-- Chọn trạng thái --</option>
                                        <option value="Reserved">Đang giữ chỗ</option>
                                        <option value="Confirmed">Đã xác nhận đặt cọc </option>
                                        <option value="Paid">Đã hoàn tất thành toán</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit -->
                        <div class="text-end">
                            <a href="@Url.Action("Edit", "Tour", new { id = Model.TourId })#passenger-list" class="btn btn-secondary ms-2">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Lưu hành khách
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header" style="background-color: #70ff83">
                <strong class="me-auto">Thông báo</strong>
                <small>vừa xong</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const toastEl = document.getElementById('liveToast');
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        });
    </script>
}


@if (TempData["ErrorMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header" style="background-color: #ff7770c9">
                <strong class="me-auto">Thông báo</strong>
                <small>vừa xong</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["ErrorMessage"]
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const toastEl = document.getElementById('liveToast');
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        });
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function updateFormattedDisplay(input, displayId) {
            const value = input.value.replace(/\D/g, ''); // remove non-digit
            if (value) {
                const formatted = Number(value).toLocaleString('vi-VN') + ' VNĐ';
                document.getElementById(displayId).innerText = formatted;
            } else {
                document.getElementById(displayId).innerText = '';
            }
        }

        // Khởi tạo nếu người dùng đã nhập sẵn (ví dụ khi quay lại form bị lỗi)
        document.addEventListener('DOMContentLoaded', () => {
            updateFormattedDisplay(document.querySelector('input[name="AssignedPrice"]'), 'AssignedPriceDisplay');
            updateFormattedDisplay(document.querySelector('input[name="CustomerPaid"]'), 'CustomerPaidDisplay');
            updateFormattedDisplay(document.querySelector('input[name="DiscountPrice"]'), 'DiscountPrice');
            DiscountPriceDisplay
        });
    </script>
}