@model TM.Models.ViewModels.PassengerViewModel


<form asp-action="UpdatePassenger" method="post">
    <input type="hidden" asp-for="Id" />
    <div><h2> <strong>Sửa chi tiết của khách hàng @Model.FullName</strong> </h2></div>
    <div class="form-group">
        <strong>
        <label asp-for="FullName"></label>
        </strong>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
     
    <div class="form-group">
        <strong>
        <label asp-for="Code"></label>
        </strong>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="DateOfBirth"></label>
        </strong>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>

        <label asp-for="Gender"></label>
        </strong>
        <select asp-for="Gender" class="form-control">
            <option value="">Chọn giới tính</option>
            <option value="Male">Nam</option>
            <option value="Female">Nữ</option>
            <option value="Other">Khác</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="IdentityNumber"></label>
        </strong>
        <input asp-for="IdentityNumber" class="form-control" />
        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="Phone"></label>
        </strong>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="Email"></label>
        </strong>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="Address"></label>
        </strong>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="TourId"></label>
        </strong>
        <input asp-for="TourId" class="form-control" type="number" />
        <span asp-validation-for="TourId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>
        <label asp-for="AssignedPrice">Giá gốc</label>
        </strong>
        <input asp-for="AssignedPrice" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="AssignedPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>

        <label asp-for="CustomerPaid"></label>
        </strong>
        <input asp-for="CustomerPaid" class="form-control" type="number" step="0.01" min="0"/>
        <span asp-validation-for="CustomerPaid" class="text-danger"></span>
    </div>

    <div class="form-group">
        <strong>

        <label asp-for="Status"></label>
        </strong>
        <select asp-for="Status" class="form-control">
            <option value="Paid">Đã trả tiền</option>
            <option value="Cancelled">Đã hủy</option>
            <option value="Reserved">Đã đặt chỗ</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <p style="color:red">@ViewBag.ErrorMessage</p>
    <p style="color:green">@ViewBag.SuccessMessage</p>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

