@using TM.Models.Entities
@using TM.Models.ViewModels
@model ModifyLocationViewModel
@{
    var q = Model.Query ?? "";
    var pagination = Model.Pagination;
}

<h3>Quản lý địa điểm</h3>

<!-- Search form -->
<div class="mb-3">
    <form class="d-flex gap-2 align-items-center" method="get" asp-action="ModifyLocation">
        <input type="text" class="form-control" name="q" value="@q" placeholder="Tìm kiếm địa điểm hoặc quốc gia..." style="max-width: 260px;" />
        <input type="hidden" name="pageSize" value="@pagination.PageSize" />
        <button type="submit" class="btn btn-secondary btn-sm"><i class="bi bi-search"></i></button>
    </form>
</div>

<!-- Table -->
<div class="table-responsive" style="max-height: 350px; overflow-y: auto;">
    <table class="table table-striped align-middle table-hover table-bordered mb-0">
        <thead class="sticky-top bg-light">
            <tr>
                <th style="width:40%;">Tên địa điểm</th>
                <th style="width:25%;">Quốc gia</th>
                <th style="width:20%;">Ngày tạo</th>
                <th style="width:15%;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Locations != null && Model.Locations.Count > 0)
            {
                foreach (var l in Model.Locations)
                {
                    <tr>
                        <td>@l.LocationName</td>
                        <td>@l.Country?.Name</td>
                        <td>@l.CreatedAt?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               href="@Url.Action("ModifyLocation", "Tour", new { id = l.Id, q = q, page = pagination.CurrentPage, pageSize = pagination.PageSize })">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination -->
@await Html.PartialAsync("_Pagination", pagination)

<!-- Form add/update -->
<h5 class="mt-4">@((Model.EditLocation != null && Model.EditLocation.Id > 0) ? "Cập nhật địa điểm" : "Thêm địa điểm mới")</h5>
<form asp-action="ModifyLocation" method="post" class="mt-3">
    <input type="hidden" asp-for="EditLocation.Id" />
    <input type="hidden" name="q" value="@q" />
    <input type="hidden" name="page" value="@pagination.CurrentPage" />
    <input type="hidden" name="pageSize" value="@pagination.PageSize" />
    <div class="mb-3">
        <label asp-for="EditLocation.LocationName" class="form-label">Tên địa điểm</label>
        <input asp-for="EditLocation.LocationName" class="form-control" maxlength="50" />
        <span asp-validation-for="EditLocation.LocationName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EditLocation.CountryId" class="form-label">Tên quốc gia</label>
        <select asp-for="EditLocation.CountryId" asp-items="Model.CountrySelectList" class="form-control"></select>
        <span asp-validation-for="EditLocation.CountryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EditLocation.Description" class="form-label">Chú thích  </label>
        <textarea asp-for="EditLocation.Description" class="form-control"></textarea>
        <span asp-validation-for="EditLocation.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a class="btn btn-secondary" href="@Url.Action("ModifyLocation", new { q = q, page = pagination.CurrentPage, pageSize = pagination.PageSize })">Làm mới</a>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Quay lại trang tour</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
