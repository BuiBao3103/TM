@model IEnumerable<TM.Models.ViewModels.TourSurchargeViewModel>

@{
    ViewData["Title"] = "Danh sách phụ phí";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Danh sách phụ phí - Tour @ViewData["TourName"]</h2>
        <a asp-action="CreateSurcharge" asp-route-id="@ViewData["TourId"]" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm phụ phí
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="EditSurcharge" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="DeleteSurcharge" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa phụ phí này?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Chưa có phụ phí nào.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Tour" asp-action="Index" class="btn btn-secondary">Quay lại danh sách tour</a>
    </div>
</div> 