@model IEnumerable<TM.Models.ViewModels.TourSurchargeViewModel>

@{
    ViewData["Title"] = "Danh sách phụ phí";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Danh sách phụ phí</h2>
            <p class="text-muted mb-0">Tour: @ViewData["TourName"]</p>
        </div>
        <a asp-action="CreateSurcharge" asp-route-id="@ViewData["TourId"]" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm phụ phí
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4 py-3">@Html.DisplayNameFor(model => model.Name)</th>
                                <th class="px-4 py-3 text-end">@Html.DisplayNameFor(model => model.Amount)</th>
                                <th class="px-4 py-3 text-center" style="width: 150px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 py-3 align-middle">
                                        <span class="fw-medium">@Html.DisplayFor(modelItem => item.Name)</span>
                                    </td>
                                    <td class="px-4 py-3 text-end align-middle">
                                        <span class="text-primary fw-medium">@Html.DisplayFor(modelItem => item.Amount)</span>
                                    </td>
                                    <td class="px-4 py-3 text-center align-middle">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="EditSurcharge" asp-route-id="@item.Id" 
                                               class="btn btn-outline-warning btn-sm px-3">
                                                <i class="fas fa-edit me-1"></i>Sửa
                                            </a>
                                            <form asp-action="DeleteSurcharge" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm px-3" 
                                                        onclick="return confirm('Bạn có chắc chắn muốn xóa phụ phí này?')">
                                                    <i class="fas fa-trash me-1"></i>Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                    <p class="text-muted mb-0">Chưa có phụ phí nào.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Tour" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách tour
        </a>
    </div>
</div>

@section Styles {
    <style>
        .table > :not(caption) > * > * {
            border-bottom-width: 1px;
        }
        .btn-group {
            gap: 0.5rem;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0,0,0,.02);
        }
    </style>
} 