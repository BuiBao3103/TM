@using TM.Models.ViewModels
@model TourWithPassengerStatsViewModel

@{
    ViewData["Title"] = "Chi tiết tour - " + Model.Name;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">
                <i class="fas fa-info-circle me-2"></i>Chi Tiết Tour
            </h2>
            <p class="text-muted mb-0">@Model.Name (@Model.Code)</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
            </a>
            @if (Model.Status != "Completed" && Model.Status != "Cancelled")
            {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
            }
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

  
    <!-- Main Content -->
    <div class="accordion" id="tourDetailsAccordion">
          <!-- Accordion: Tổng quan tour -->
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingSummary">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSummary" aria-expanded="true" aria-controls="collapseSummary">
                <i class="fas fa-chart-pie me-2"></i>Tổng quan tour
            </button>
        </h2>
        <div id="collapseSummary" class="accordion-collapse collapse show" aria-labelledby="headingSummary">
            <div class="accordion-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <h4 class="text-primary fw-bold mb-1">@Model.Name</h4>
                        <div class="text-muted mb-2">
                            <i class="fa-solid fa-calendar-days me-1"></i>
                            @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                        </div>
                        <div>
                            <strong>Địa điểm:</strong> @Model.LocationName - @Model.CountryName
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class=" mt-3">
                            <strong>Giá:</strong>
                            @if (Model.SuggestPrice == Model.DiscountPrice || Model.DiscountPrice == null)
                            {
                                <span class="fw-bold text-dark">@string.Format("{0:N0}₫", Model.SuggestPrice)</span>
                            }
                            else
                            {
                                <span class="fw-bold text-danger">@string.Format("{0:N0}₫", Model.DiscountPrice)</span>
                                <span class="text-muted text-decoration-line-through ms-2" style="font-size: 0.9em;">
                                    @string.Format("{0:N0}₫", Model.SuggestPrice)
                                </span>
                            }
                        </div>
                        <div class=" mt-3">
                            <strong>Số chỗ:</strong>
                            @if (Model.AvailableSeats == 0)
                            {
                                <span class="badge bg-danger">Hết chỗ</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@(@Model.TotalSeats - @Model.AvailableSeats) / @Model.TotalSeats chỗ</span>
                            }
                        </div>
                        <div class=" mt-3">
                            <strong>Trạng thái:</strong>
                            @switch (Model.Status)
                            {
                                case "Available":
                                    <span class="badge bg-primary"><i class="fa-solid fa-circle-check me-1"></i>Hoạt động</span>; break;
                                case "Ready":
                                    <span class="badge bg-success"><i class="fa-solid fa-hourglass-start me-1"></i>Sẵn sàng</span>; break;
                                case "Cancelled":
                                    <span class="badge bg-danger"><i class="fa-solid fa-ban me-1"></i>Đã hủy</span>; break;
                                case "Completed":
                                    <span class="badge bg-secondary"><i class="fa-solid fa-check-double me-1"></i>Hoàn thành</span>; break;
                                default:
                                    <span class="badge bg-warning"><i class="fa-solid fa-question me-1"></i>Không xác định</span>; break;
                            }
                        </div>
                        <div class=" mt-3">
                            <strong>Yêu cầu visa:</strong>
                            @if (Model.IsVisaRequired == true)
                            {
                                <span class="badge bg-success">
                                    <i class="fa-solid fa-check me-1"></i> Có
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="fa-solid fa-xmark me-1"></i> Không
                                </span>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class=" mt-3">
                            <strong>Đang giữ chỗ:</strong>
                            <span class="badge bg-light text-dark" style="background-color: #f0e9ff !important;">
                                <i class="fa-solid fa-user-clock me-1"></i> @Model.DepositedCustomer khách, @Model.ReservedCustomer đã cọc
                            </span>
                        </div>
                        <div class=" mt-3">
                            <strong>Passport:</strong>
                            <span class="badge bg-light text-dark" style="background-color: #f0e9ff !important;">
                                <i class="fa-solid fa-passport me-1"></i> @(Model.TotalCustomers - Model.CustomerNoPassport) / @Model.TotalCustomers khách
                            </span>
                        </div>
                        <div class=" mt-3">
                            <strong>Đã thanh toán đủ:</strong>
                            <span class="badge bg-light text-dark" style="background-color: #e1f8e6 !important;">
                                <i class="fa-solid fa-money-bill-wave me-1"></i> @Model.FullPayCustomers / @Model.TotalCustomers khách
                            </span>
                        </div>
                        <div class=" mt-3">
                            <strong>Di chuyển:</strong>
                            <span class="badge bg-light text-dark" style="background-color: #fff3cd !important;">
                                <i class="fa-solid fa-plane-departure me-1"></i> @Model.CustomerFullPayNotTicket khách trả đủ chưa có vé
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!-- Thông tin chung -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingGeneral">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGeneral" aria-expanded="true" aria-controls="collapseGeneral">
                    <i class="fas fa-globe-asia me-2"></i>Thông tin chung & Chỗ ngồi
                </button>
            </h2>
            <div id="collapseGeneral" class="accordion-collapse collapse show" aria-labelledby="headingGeneral">
                <div class="accordion-body">
                    <div class="row">
                        <div class="col-md-4 mt-3"><strong>Điểm khởi hành:</strong> @Model.DepartureLocation</div>
                        <div class="col-md-4 mt-3"><strong>Ngày đi:</strong> @Model.StartDate.ToString("dd/MM/yyyy HH:mm")</div>
                        <div class="col-md-4 mt-3"><strong>Ngày về:</strong> @Model.EndDate.ToString("dd/MM/yyyy HH:mm")</div>
                        <div class="col-md-4 mt-3"><strong>Tổng chỗ:</strong> @Model.TotalSeats</div>
                        <div class="col-md-4 mt-3"><strong>Chỗ trống:</strong> @Model.AvailableSeats</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin giá -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingPrice">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapsePrice" aria-expanded="true" aria-controls="collapsePrice">
                    <i class="fas fa-dollar-sign me-2"></i>Thông tin giá
                </button>
            </h2>
            <div id="collapsePrice" class="accordion-collapse collapse show" aria-labelledby="headingPrice">
                <div class="accordion-body">
                    <!-- VÙNG GIÁ VÉ -->
                    <div class="mb-3 pb-2 border-bottom">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-ticket-detailed-fill me-2"></i>Thông tin giá vé
                        </h6>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Giá đề xuất:</strong>
                                <span class="text-success fw-bold">@Model.SuggestPrice.ToString("N0") VNĐ</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Giá giảm:</strong>
                                <span class="text-warning fw-bold">@(Model.DiscountPrice?.ToString("N0") ?? "N/A") VNĐ</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Phí HH:</strong>
                                <span class="text-danger fw-bold">@Model.HhFee.ToString("N0") VNĐ</span>
                            </div>
                        </div>
                    </div>

                    <!-- VÙNG TỔNG THU -->
                    <div class="pt-2">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-cash-coin me-2"></i>Thông tin tổng thu
                        </h6>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Tổng giá đề xuất:</strong>
                                <span class="text-success fw-bold">@Model.TotalAssignedPrice?.ToString("N0") VNĐ</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Tổng thu hiện tại:</strong>
                                <span class="text-warning fw-bold">@(Model.TotalCustomerPaid?.ToString("N0") ?? "N/A") VNĐ</span>
                            </div>
                            <div class="col-md-4">
                                <strong>Cần thu:</strong>
                                <span class="text-danger fw-bold">
                                    @((Model.TotalAssignedPrice - Model.TotalCustomerPaid)?.ToString("N0")) VNĐ
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Cài đặt -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingSettings">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSettings" aria-expanded="false" aria-controls="collapseSettings">
                    <i class="fas fa-cog me-2"></i>Cài đặt & Hạn chót
                </button>
            </h2>
            <div id="collapseSettings" class="accordion-collapse collapse" aria-labelledby="headingSettings">
                <div class="accordion-body">
                    <div class="row">
                        <div class="col-md-3"><strong>Giữ chỗ tự động:</strong> @(Model.IsAutoHoldTime == true ? "Có" : "Không")</div>
                        <div class="col-md-3"><strong>Thời gian giữ chỗ:</strong> @(Model.HoldTime?.ToString() ?? "N/A") giờ</div>
                        <div class="col-md-3"><strong>Yêu cầu Visa:</strong> @(Model.IsVisaRequired == true ? "Có" : "Không")</div>
                        <div class="col-md-3"><strong>Hạn chót Visa:</strong> @(Model.VisaDeadline?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                        <div class="col-md-3 mt-3"><strong>Hạn chót thanh toán:</strong> @(Model.FullPayDeadline?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin chuyến bay -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingFlight">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFlight" aria-expanded="false" aria-controls="collapseFlight">
                    <i class="fas fa-plane me-2"></i>Thông tin chuyến bay
                </button>
            </h2>
            <div id="collapseFlight" class="accordion-collapse collapse" aria-labelledby="headingFlight">
                <div class="accordion-body">
                    <p><strong>Chuyến bay đi:</strong> @Model.DepartureFlightInfo</p>
                    <p><strong>Chuyến bay về:</strong> @Model.ArrivalFlightInfo</p>
                </div>
            </div>
        </div>

        <!-- Ghi chú -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingNotes">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNotes" aria-expanded="false" aria-controls="collapseNotes">
                    <i class="fas fa-sticky-note me-2"></i>Ghi chú
                </button>
            </h2>
            <div id="collapseNotes" class="accordion-collapse collapse" aria-labelledby="headingNotes">
                <div class="accordion-body">
                    <p><strong>Ghi chú phòng:</strong> @Model.RoomNote</p>
                    <p><strong>Ghi chú chung:</strong> @Model.Note</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Surcharges Card -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Danh sách phụ phí</h5>
        </div>
        <div class="card-body">
            @if (Model.TourSurcharges.Any())
            {
                <table class="table table-sm table-hover">
                    <thead><tr><th>Tên phụ phí</th><th class="text-end">Số tiền</th></tr></thead>
                    <tbody>
                        @foreach (var item in Model.TourSurcharges)
                        {
                            <tr><td>@item.Name</td><td class="text-end">@item.Amount.ToString("N0") VNĐ</td></tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Chưa có phụ phí nào.</p>
            }
        </div>
    </div>

    <!-- Passengers Card -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Danh sách hành khách</h5>
        </div>
        <div class="card-body" id="passenger-list">
            @{
                ViewBag.FormAction = "Details";
            }
            @(await Html.PartialAsync("~/Views/Passenger/Shared/_FormSearchPassengerPartial.cshtml", Model.Id))
            <div id="container-passenger-table">
                @(await Html.PartialAsync("~/Views/Passenger/Shared/_TablePassengerGroupPartial.cshtml", Model.Passengers))
            </div>
        </div>
    </div>
</div>

<style>
    .accordion-button:not(.collapsed) {
        color: #0d6efd;
        background-color: #e7f1ff;
    }
</style>